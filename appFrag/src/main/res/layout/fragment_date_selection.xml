<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.machinecontroler.myroomapplication.DateSelectionActivityFragment"
    tools:showIn="@layout/activity_date_selection">

    <TextView
        android:id="@+id/lblDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Date (M-D-YYYY): "
        android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:background="@color/refillmanage"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvnewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hjgg"
            android:layout_marginTop="15dp"
            android:background="@color/regbt"

            android:textAppearance="?android:attr/textAppearanceLarge" />



    <DatePicker
        android:id="@+id/dpResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        />



</android.support.constraint.ConstraintLayout>
